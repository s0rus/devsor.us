---
import { CANONICAL_URL, SITE_DESCRIPTION, SITE_TITLE } from "../lib/consts";
import Metadata from "../lib/metadata.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <Metadata
      title={SITE_TITLE}
      description={SITE_DESCRIPTION}
      canonicalUrl={CANONICAL_URL}
      image="/og-portfolio.png"
      type="website"
    />
  </head>
  <body>
    <main
      class="max-w-screen container relative flex h-screen max-h-screen flex-col"
    >
      <slot />
    </main>
  </body>
</html>
