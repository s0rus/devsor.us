---
import Footer from "../components/footer.astro";
import Hero from "../components/hero.astro";
import Links from "../components/links.astro";
import MainLayout from "../layouts/main-layout.astro";

import { Image } from "astro:assets";
import glossyRock from "../assets/glossy_rock.webp";
import { Icon } from "../components/ui/icon";
---

<MainLayout>
  <Hero />
  <Links />
  <Footer>
    <Image
      src={glossyRock}
      alt=""
      loading="eager"
      class="pointer-events-none animate-float"
      width={102}
      height={102}
      slot="image"
      title="Glossy rock"
    />
    <Icon.outlinedStar className="text-white/10" slot="background" />
  </Footer>
</MainLayout>
